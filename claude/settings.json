{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(bash -n:*)",
      "Bash(brew bundle check:*)",
      "Bash(cat:*)",
      "Bash(diff:*)",
      "Bash(find:*)",
      "Bash(gh issue view:*)",
      "Bash(gh repo view:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git check-ignore:*)",
      "Bash(git clone:*)",
      "Bash(git config:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git ls-files:*)",
      "Bash(git pull:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(wc:*)",
      "Bash(xargs:*)",
      "Bash(xcodebuild:*)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:docs.claude.ai)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebSearch"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE=$(echo \"$CLAUDE_TOOL_INPUT\" | python3 -c 'import sys,json;print(json.load(sys.stdin).get(\"file_path\",\"\"))' 2>/dev/null) || true; case \"$FILE\" in \"$HOME\"/.config/git/*|\"$HOME\"/.config/ghostty/*|\"$HOME\"/.config/lazygit/*|\"$HOME\"/.config/nvim/*|\"$HOME\"/.config/starship.toml|\"$HOME\"/.claude/settings.json|\"$HOME\"/.claude/CLAUDE.md) echo 'BLOCK: Edit the source in ~/.dotfiles/ instead of the symlink target' >&2; exit 2;; esac"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/.dotfiles/claude/hooks/security_reminder_hook.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE=$(echo \"$CLAUDE_TOOL_INPUT\" | python3 -c 'import sys,json;print(json.load(sys.stdin).get(\"file_path\",\"\"))' 2>/dev/null) || true; case \"$FILE\" in *.sh) bash -n \"$FILE\";; esac"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume|clear|compact",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.dotfiles/claude/hooks/superpowers-session-start",
            "async": false
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python3 ~/.claude/statusline.py"
  },
  "enabledPlugins": {
    "everything-claude-code@everything-claude-code": false,
    "document-skills@anthropic-agent-skills": false,
    "example-skills@anthropic-agent-skills": false
  },
  "extraKnownMarketplaces": {
  },
  "language": "English and Japanese are displayed side by side",
  "includeCoAuthoredBy": true
}
